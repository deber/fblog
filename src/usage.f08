subroutine usage
  print'(/,a)',&
  "USAGE: " // SOFT // " [option]" // new_line('a') // &
  "" // new_line('a') // &
  "Without any option, it runs in interactive mode" // new_line('a') // &
  "" // new_line('a') // &
  " OPTIONS" // new_line('a') // &
  "    -h   --help          display this help and exit" // new_line('a') // &
  "    -v   --version       output version information and exit"
end subroutine usage
